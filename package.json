{
  "name": "txt-notes",
  "version": "0.1.6",
  "description": "Manage txt files like the notes app",
  "main": "main.js",
  "author": "Troy Coutu",
  "license": "CC0-1.0",
  "dependencies": {
    "chokidar": "~3.3.1",
    "electron-context-menu": "~0.15.2",
    "electron-store": "~5.1.0",
    "electron-window-state": "~5.0.3",
    "fs-extra": "~8.1.0",
    "klaw-sync": "~6.0.0",
    "moment": "~2.24.0",
    "split.js": "~1.5.11",
    "teddy": "~0.4.28"
  },
  "devDependencies": {
    "electron": "~7.1.7",
    "electron-builder": "~21.2.0",
    "electron-reloader": "~0.3.0",
    "husky": "~4.0.0",
    "mocha": "~7.0.0",
    "lint-staged": "~9.5.0",
    "spectron": "~9.0.0",
    "standard": "~14.3.1",
    "stylelint": "~12.0.1",
    "stylelint-config-standard": "~19.0.0"
  },
  "build": {
    "appId": "com.autre.txtnotes",
    "mac": {
      "category": "public.app-category.productivity"
    }
  },
  "scripts": {
    "dist": "electron-builder --mac --windows",
    "pack": "electron-builder --dir",
    "lint": "standard && stylelint *.css",
    "start": "electron .",
    "test": "mocha"
  },
  "lint-staged": {
    "*.css": "stylelint",
    "*.js": "standard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
